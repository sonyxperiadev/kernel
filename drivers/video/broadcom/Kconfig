config FB_BRCM_KONA
	tristate "Broadcom KONA Platform Framebuffer support"
	depends on FB && ARM && ARCH_KONA
	select FB_CFB_FILLRECT
	select FB_CFB_COPYAREA
	select FB_CFB_IMAGEBLIT
	select KONA_DSI
	select KONA_VC4LITE
	select KONA_SMI
	help
	  This framebuffer device driver is for the Broadcom KONA platform.

config FB_BRCM_ASYNC_UPDATE
	bool "FB Async Update"
	default N
	help
	  This is used for asynchronous frame update. If you do not know about
	  this config, please just say 'N' here.

config FB_BRCM_CP_CRASH_DUMP_IMAGE_SUPPORT
	bool "CP Crash Dump Image Support"
	default N
	help
	  This is used for LCD to show that cp goes into crahs dump state.
	  If you do not know about this config, please just say 'N' here.

config FB_BRCM_ILI9486
	tristate "LCD Panel ILI9486 Controller"
	default N
	help 
		HVGA LCD panel (ILI9486 controller)
	  
config LCD_ILI9486_SUPPORT
        tristate "LCD Panel- ILI9486 controller"
        default N
        help
	  HVGA LCD panel (ILI9486 controller)

config LCD_R61531_SUPPORT
        tristate "LCD Panel- R61531 controller"
        default N
        help
	  HVGA LCD panel (R61531 controller)

config LCD_ILI9341_SUPPORT
        tristate "LCD Panel- ILI9341 controller"
        default N
        help
	  QVGA LCD panel (ILI9341 controller)

config LCD_HX8369_SUPPORT
        tristate "LCD Panel- HX8369 controller"
        default N
	select FB_BRCM_ASYNC_UPDATE
        help
	  WVGA LCD panel (HX8369 controller)
